@using MegaKids.DataModel.Models
@model MegaKids.IServices.Models.WebPage.SliderLang
@{
    ViewBag.Title = "Добавление элемента в слайдер";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style rel="stylesheet" type="text/css">

</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-globe"></i>
            <a href="@Url.Action("Index", "dashboard", new { Area = "Admin" })">Mega Kids</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a>Главная</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("slidermanagement", "modules", new { Area = "Admin", sitePage = EnumSitePage.Index })">Слайдер</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a>Редактирование</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">

        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-pencil"></i>Редактирование элемента слайдера
                </div>
            </div>
            <div class="portlet-body">
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#RU_tab" data-toggle="tab">
                            RU
                        </a>
                    </li>
                    <li>
                        <a href="#RO_tab" data-toggle="tab">
                            RO
                        </a>
                    </li>
                </ul>
                <div class="form-body form-horizontal">
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="RU_tab">
                            <div class="form-group form-md-line-input has-success">
                                <label class="col-md-2 control-label" for="Ru_Title">Заголовок слайда</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" id="Ru_Title" name="Ru_Title" rows="2" placeholder="">@Model.Ru_Title</textarea>
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input has-success">
                                <label class="col-md-2 control-label" for="Ru_Content">Контент</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" id="Ru_Content" name="Ru_Content" rows="4" placeholder="">@Model.Ru_Content</textarea>
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="RO_tab">
                            <div class="form-group form-md-line-input has-success">
                                <label class="col-md-2 control-label" for="Ro_Title">Заголовок слайда</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" id="Ro_Title" name="Ro_Title" rows="2" placeholder="">@Model.Ro_Title</textarea>
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input has-success">
                                <label class="col-md-2 control-label" for="Ro_Content">Контент</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" id="Ro_Content" name="Ro_Content" rows="4" placeholder="">@Model.Ro_Content</textarea>
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input has-success">
                            <label class="control-label col-md-2" for="Photo">Фото слайда</label>
                            <div class="col-md-3">
                                @if (Model.Photo != "" && Model.Photo != null)
                                {
                                    <div class="fileinput fileinput-exists" data-provides="fileinput">
                                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                            <img src="~/Content/Images/Slider/@Model.Photo" />
                                        </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new">
                                                    Выберите изображение
                                                </span>
                                                <span class="fileinput-exists">
                                                    Изменить
                                                </span>
                                                <input type="file" id="PhotoFile" name="PhotoFile">
                                            </span>
                                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                                                Удалить
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                        </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new">
                                                    Выберите изображение
                                                </span>
                                                <span class="fileinput-exists">
                                                    Изменить
                                                </span>
                                                <input type="file" id="PhotoFile" name="PhotoFile">
                                            </span>
                                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                                                Удалить
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                            <label class="control-label col-md-offset-1 col-md-1" for="CreateDate">Дата добавления</label>
                            <div class="col-md-3">
                                <input class="form-control datetime" value="@Model.CreateDate" id="CreateDate" name="CreateDate" style="width: 250px" type="text">
                                <span class="help-block">
                                    Выберите дату
                                </span>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <div class="row">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="button" id="Save-Changes" value="@Model.Id" style="margin-top: 15px;" class="btn blue">Сохранить</button>
                                    <img id="is-loading" style="display:none;margin: 15px 0 0 15px;" src="~/Content/Images/gif/loading.gif" width="35" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->



@section scripts{
    <script src="~/Scripts/moment-with-locales.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>

    <script type="text/javascript" src="~/Content/assets/global/plugins/fuelux/js/spinner.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>
    <script type="text/javascript" src="~/Content/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/global/plugins/jquery.input-ip-address-control-1.0.min.js"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-pwstrength/pwstrength-bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-tags-input/jquery.tagsinput.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/typeahead/typeahead.bundle.js" type="text/javascript"></script>

    <script src="~/Content/assets/admin/pages/scripts/components-form-tools.js"></script>
    <script>
        $(function() {
            ComponentsFormTools.init();
            $('.datetime').datetimepicker({
                locale: 'ru'
            });
        });

        $('#Save-Changes').click(function () {
            $('#is-loading').show();
            files = document.getElementById('PhotoFile').files;
            var data = new FormData();
            data.append("Id", $(this).val());

            data.append("Ru_Title", $("#Ru_Title").val());
            data.append("Ru_Content", $("#Ru_Content").val());
            data.append("Ro_Title", $("#Ro_Title").val());
            data.append("Ro_Content", $("#Ro_Content").val());
            data.append("CreateDate", $("#CreateDate").val());

            data.append("PhotoFile", files[0]);
            $.ajax({
                url: '@Url.Action("UpdateSlider", "modules", new { Area = "Admin" })',
                type: 'post',
                contentType: false,
                processData: false,
                data: data,
                success: function (data) {
                    document.location.href = "@Url.Action("slidermanagement","modules", new { Area = "Admin", sitePage = EnumSitePage.Index })";
                    console.log(data);
                },
                error: function (xhr) {
                    console.log(xhr.responseText);
                }
            });
        });
    </script>
    <script>
        $('#site-home').addClass("active open");
        $('#home-slider').addClass("active");
    </script>
}






