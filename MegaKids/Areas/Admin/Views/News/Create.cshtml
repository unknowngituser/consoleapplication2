<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus-circle"></i>Добавление новости
                </div>
            </div>
            <div class="portlet-body">
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#RU_tab" data-toggle="tab">
                            RU
                        </a>
                    </li>
                    <li>
                        <a href="#RO_tab" data-toggle="tab">
                            RO
                        </a>
                    </li>
                </ul>
                <div class="tab-content form-horizontal">
                    <div class="tab-pane fade active in" id="RU_tab">
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ru_Title">Название</label>
                            <div class="col-md-11">
                                <input type="text" class="form-control input-lg" id="Ru_Title" name="Ru_Title" placeholder="">
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ru_Seo_Keywords">SEO Keywords</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ru_Seo_Keywords" name="Ru_Seo_Keywords" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ru_Seo_Description">SEO Description</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ru_Seo_Description" name="Ru_Seo_Description" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-md-1" for="Ru_NewsContent">Контент</label>
                            <div class="col-md-11">
                                <textarea class="ckeditor form-control" id="Ru_NewsContent" name="Ru_NewsContent" rows="6"></textarea>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ru_PreviewContent">Текст для превью</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ru_PreviewContent" name="Ru_PreviewContent" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="RO_tab">
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ro_Title">Название</label>
                            <div class="col-md-11">
                                <input type="text" class="form-control input-lg" id="Ro_Title" name="Ro_Title" placeholder="">
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ro_Seo_Keywords">SEO Keywords</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ro_Seo_Keywords" name="Ro_Seo_Keywords" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ro_Seo_Description">SEO Description</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ro_Seo_Description" name="Ro_Seo_Description" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-md-1" for="Ro_NewsContent">Контент</label>
                            <div class="col-md-11">
                                <textarea class="ckeditor form-control" id="Ro_NewsContent" name="Ro_NewsContent" rows="6"></textarea>
                            </div>
                        </div>
                        <div class="form-group form-md-line-input">
                            <label class="col-md-1 control-label" for="Ro_PreviewContent">Текст для превью</label>
                            <div class="col-md-11">
                                <textarea class="form-control" id="Ro_PreviewContent" name="Ro_PreviewContent" rows="3" placeholder=""></textarea>
                                <div class="form-control-focus">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        <label class="control-label col-md-1" for="Photo">Главное фото</label>
                        <div class="col-md-3">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                </div>
                                <div>
                                    <span class="btn default btn-file">
                                        <span class="fileinput-new">
                                            Выберите изображение
                                        </span>
                                        <span class="fileinput-exists">
                                            Изменить
                                        </span>
                                        <input type="file" id="Photo" name="Photo">
                                    </span>
                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                                        Удалить
                                    </a>
                                </div>
                            </div>
                        </div>
                        <label class="control-label col-md-1" for="CreateDate">Дата добавления</label>
                        <div class="col-md-2">
                            <input class="form-control datetime" id="CreateDate" name="CreateDate" style="width: 180px" type="text">
                            <span class="help-block">
                                Выберите дату
                            </span>
                        </div>
                        <div class="col-md-3 col-md-offset-1" id="Preview" style="display:none;">
                            <a class="latest-news-link" style="cursor:default;text-decoration: none;">
                                <div class="latest-news">
                                    <div class="latest-news-image">
                                        <img id="preview-img" width="250" />
                                    </div>
                                    <p class="latest-news-date" id="preview-date">
                                        
                                    </p>
                                    <p class="latest-news-title" id="preview-title">
                                        
                                    </p>
                                    <div class="latest-news-content" id="preview-content">
                                        
                                    </div>
                                </div>
                            </a>

                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-1 col-md-11">
                                <button type="button" id="Save-News" class="btn blue">Сохранить</button>
                                <button type="button" id="Show-Preview" class="btn blue">Показать превью</button>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->



@section scripts{


<script src="~/Scripts/moment-with-locales.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

<script type="text/javascript" src="~/Content/assets/global/plugins/fuelux/js/spinner.min.js"></script>
<script type="text/javascript" src="~/Content/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>
<script type="text/javascript" src="~/Content/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js"></script>
<script type="text/javascript" src="~/Content/assets/global/plugins/jquery.input-ip-address-control-1.0.min.js"></script>
<script src="~/Content/assets/global/plugins/bootstrap-pwstrength/pwstrength-bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/jquery-tags-input/jquery.tagsinput.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/typeahead/typeahead.bundle.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Content/assets/global/plugins/ckeditor_full/ckeditor.js"></script>

<script src="~/Content/assets/admin/pages/scripts/components-form-tools.js"></script>
    <script>
        $(function () {
            $('.datetime').datetimepicker({
                locale: 'ru'
            });
            $('.datetime').on("dp.change", function (e) {
                console.log('date',e.date);
                console.log('CreateDate', $('#CreateDate').val());
            });
        });
    </script>
    <script>
        $('#site-news').addClass("active open");
        $('#news-add').addClass("active");
    </script>
<script>
        $(function() {
            ComponentsFormTools.init();
            $('#Show-Preview').click(function () {
                var img = $('div.fileinput-preview.thumbnail > img').attr('src');
                $('#preview-img').attr('src', img);
                var date = $('#CreateDate').val() || '@DateTime.Now';
                $('#preview-date').text(date.substr(0,11));
                $('#preview-title').text($('#Ru_Title').val());
                $('#preview-content').text($('#Ru_PreviewContent').val());
                $('#Preview').show();
            });
            $('#Save-News').click(function () {
                for (instance in CKEDITOR.instances) {
                    CKEDITOR.instances[instance].updateElement();
                }

                files = document.getElementById('Photo').files;
                var data = new FormData();
                data.append("Ru_Title", $("#Ru_Title").val());
                data.append("Ru_Seo_Keywords", $("#Ru_Seo_Keywords").val());
                data.append("Ru_Seo_Description", $("#Ru_Seo_Description").val());
                data.append("Ru_NewsContent", $("#Ru_NewsContent").val());
                data.append("Ru_PreviewContent", $("#Ru_PreviewContent").val());
                data.append("Ro_Title", $("#Ro_Title").val());
                data.append("Ro_Seo_Keywords", $("#Ro_Seo_Keywords").val());
                data.append("Ro_Seo_Description", $("#Ro_Seo_Description").val());
                data.append("Ro_NewsContent", $("#Ro_NewsContent").val());
                data.append("Ro_PreviewContent", $("#Ro_PreviewContent").val());
                data.append("CreateDate", $("#CreateDate").val());
                
                data.append("PhotoFile", files[0]);

                for (instance in CKEDITOR.instances) {
                    CKEDITOR.instances[instance].updateElement();
                }
                $.ajax({
                    url: '@Url.Action("create", "news", new { Area = "Admin" })',
                    type: 'post',
                    contentType: false,
                    processData: false,
                    data: data,
                    success: function (data) {
                        document.location.href = "@Url.Action("management","news", new { Area = "Admin" })";
                        console.log(data);
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);
                    }
                });
            });
        });
</script>
}
