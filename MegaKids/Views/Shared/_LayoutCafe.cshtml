<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="keywords" content="@ViewBag.Keywords"/>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/css/components-md.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/fonts.css" rel="stylesheet" />
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    <link href="~/Content/css/index.css" rel="stylesheet" />
    <link href="~/Content/css/services.css" rel="stylesheet" />
    <link href="~/Content/css/about.css" rel="stylesheet" />
    <link href="~/Content/css/news.css" rel="stylesheet" />
    <link href="~/Content/css/gallery.css" rel="stylesheet" />
    <link href="~/Content/css/albums.css" rel="stylesheet" />
    <link href="~/Content/css/watchnews.css" rel="stylesheet" />
    <link href="~/Content/css/cafe.css" rel="stylesheet" />
</head>
<body>
    <!-- Шапка сайта -->
    <header id="header">
        <div class="header-top">
            <div class="site-logo">
                <a href="@Url.Action("index","home")">
                    <div class="logo-img-ro">
                        <img id="site-logo" src="~/Content/Images/CafeLogo.png" />
                    </div>
                </a>
            </div>
            <div class="header-menu">
                
                <div class="menu-items" style="display:none;">
                    <a href="@Url.Action("index","about")" class="btn blue" id="btn-about">@Resource.About</a>
                    <a href="@Url.Action("index","services")" class="btn blue" id="btn-services">@Resource.Services</a>
                    <a href="@Url.Action("index","news")" class="btn blue" id="btn-news">@Resource.News</a>
                    <a href="@Url.Action("index","gallery")" class="btn blue" id="btn-gallery">@Resource.Gallery</a>
                    <a href="@Url.Action("index","cafe")" class="btn blue" id="btn-cafe">@Resource.Cafe</a>
                    @Url.LangSwitcher(Resource.Language, ViewContext.RouteData, Resource.Language)
                </div>
            </div>
        </div>
        
    </header>
<div class="navbar-wrapper" style="">
    <div class="container" style="padding-left:0;padding-right:0;">
        <div class="navigation">
            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    @Url.LangSwitcher(Resource.Language, ViewContext.RouteData, Resource.Language)
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="soc-faceb" target="_blank" href="https://www.facebook.com/MegaKids.md/"><img src="~/Content/Images/FB.svg" /></a>

                    <a class="navbar-brand" href="/">MegaKids</a>
                </div>

                <!--/.navbar-header-->
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("index","about")" class="btn blue" id="btn-about">@Resource.About</a></li>
                        <li><a href="@Url.Action("index","services")" class="btn blue" id="btn-services">@Resource.Services</a></li>
                        <li><a href="@Url.Action("index","news")" class="btn blue" id="btn-news">@Resource.News</a></li>
                        <li><a href="@Url.Action("index","gallery")" class="btn blue" id="btn-gallery">@Resource.Gallery</a></li>
                        <li><a href="@Url.Action("index","cafe")" class="btn blue" id="btn-cafe">@Resource.Cafe</a></li>
                        <li id="soc-icon"><a target="_blank" href="https://www.facebook.com/MegaKids.md/"><img id="soc-facebook" src="~/Content/Images/FB.svg" /></a></li>
                        <li>@Url.LangSwitcher(Resource.Language, ViewContext.RouteData, Resource.Language)</li>
                    </ul>
                </div>

                <!--/.navbar-collapse-->
            </nav>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
    <!-- Конец шапки -->
    
    <div class="body-content">
        @RenderBody()
        
    </div>
    <footer id="footer">
        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="widget-col">
                        <ul>
                            <li><a href="@Url.Action("index","about")">@Resource.About</a></li>
                        </ul>
                    </div>
                    <div class="widget-col">
                        <ul>
                            <li><a href="@Url.Action("index","services")">@Resource.Services</a></li>
                        </ul>
                    </div>
                    <div class="widget-col">
                        <ul>
                            <li><a href="@Url.Action("index","news")">@Resource.News</a></li>
                        </ul>
                    </div>
                    <div class="widget-col">
                        <ul>
                            <li><a href="@Url.Action("index","gallery")">@Resource.Gallery</a></li>
                        </ul>
                    </div>
                    <div class="widget-col">
                        <ul>
                            <li><a href="@Url.Action("index","cafe")">@Resource.Cafe</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up" style="font-size: 40px;"></i>
        </div>
    </footer>
    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Content/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="~/Content/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/Content/assets/admin/layout/scripts/layout.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
